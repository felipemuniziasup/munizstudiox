{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy (Produção - branch main)",
      "type": "shell",
      "command": "git checkout -B main && git pull --ff-only origin main || echo . && npm run cf:build && git add -A && git commit --allow-empty -m \"deploy: produção (main)\" && git push -u origin main",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Preview (npm run dev)",
      "type": "shell",
      "command": "npm run dev",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Preview dist (npm run preview:dist)",
      "type": "shell",
      "command": "npm run preview:dist",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Kill 5173 (liberar porta preview)",
      "type": "shell",
      "command": "kill-port 5173 || echo .",
      "problemMatcher": []
    }
  ]
}
